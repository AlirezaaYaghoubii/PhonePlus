<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="samaco.idepardazan.phoneplus" >

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/plus"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Contacts"
            android:label="@string/title_activity_contacts"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar" >
        </activity>
        <activity
            android:name=".ContactsGridView"
            android:label="@string/title_activity_contacts_grid_view"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar" >
        </activity>
        <activity
            android:name=".ContactsList"
            android:label="@string/title_activity_contacts_list"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar" >
        </activity>
        <activity
            android:name=".ContactsEdit"
            android:label="@string/title_activity_contacts_edit"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar" >
        </activity>
        <activity
            android:name=".ContactsDetailsEdit"
            android:label="@string/title_activity_contacts_details_edit"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar" >
        </activity>
        <activity
            android:name=".SimContactsList"
            android:label="@string/title_activity_sim_contacts_list"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar" >
        </activity>
        <activity
            android:name=".ContactsInfoReport"
            android:label="@string/title_activity_contacts_info_report"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar" >
        </activity>
        <activity
            android:name=".BankInfoReport"
            android:label="@string/title_activity_bank_info_report"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar" >
        </activity>
        <activity
            android:name=".Tavalod"
            android:label="@string/title_activity_tavalod"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar">
        </activity>
        <activity
            android:name=".Aghd"
            android:label="@string/title_activity_aghd"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar">
        </activity>
        <activity
            android:name=".Ezdevaj"
            android:label="@string/title_activity_ezdevaj"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar">
        </activity>
        <activity
            android:name=".Vafat"
            android:label="@string/title_activity_vafat"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar">
        </activity>
        <activity
            android:name=".Taghvim"
            android:label="@string/title_activity_taghvim"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar">
        </activity>
        <activity
            android:name=".FullReport"
            android:label="@string/title_activity_full_report"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar">
        </activity>
    </application>

</manifest>

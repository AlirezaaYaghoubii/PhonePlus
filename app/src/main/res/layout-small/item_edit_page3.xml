<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/toolbar_dropshadow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/LayerTop"
        android:gravity="top"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:focusableInTouchMode="true"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/Layer2"
            android:gravity="top"
            android:baselineAligned="false"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:background="@android:drawable/dialog_holo_light_frame"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ScrollView1"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="top"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/editbox_selector">

                        <Spinner
                            android:id="@+id/Spinner_Bank1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/EditText_AccountId"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/editbox_selector"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:hint="شماره حساب"
                        android:gravity="center"
                        android:layout_marginTop="2dp"
                        android:inputType="number"
                        />

                    <EditText
                        android:id="@+id/EditText_CardId"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/editbox_selector"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:hint="شماره کارت"
                        android:gravity="center"
                        android:layout_marginTop="2dp"
                        android:inputType="number"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/editbox_selector"
                        android:layout_marginTop="10dp">

                        <Spinner
                            android:id="@+id/Spinner_Bank2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/EditText_AccountId2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/editbox_selector"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:hint="شماره حساب"
                        android:gravity="center"
                        android:layout_marginTop="2dp"
                        android:inputType="number"
                        />

                    <EditText
                        android:id="@+id/EditText_CardId2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/editbox_selector"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:hint="شماره کارت"
                        android:gravity="center"
                        android:layout_marginTop="2dp"
                        android:inputType="number"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="top"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl"
                        android:layout_marginTop="20dp"

                        >

                        <Button
                            android:layout_height="50dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:id="@+id/Btn_Save"
                            android:text="ثبت تغییرات"
                            android:background="@android:drawable/dialog_holo_light_frame"
                            />


                        <Button
                            android:layout_height="50dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:id="@+id/Btn_Cancel"
                            android:text="انصراف"
                            android:background="@android:drawable/dialog_holo_light_frame"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="top"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl"

                        >

                        <Button
                            android:layout_height="50dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:id="@+id/Btn_Telegram"
                            android:text="ارسال با تلگرام"
                            android:background="@android:drawable/dialog_holo_light_frame"
                            />

                        <Button
                            android:layout_height="50dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:id="@+id/Btn_ShareWith"
                            android:text="ارسال با ..."
                            android:background="@android:drawable/dialog_holo_light_frame"
                            />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <View android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/toolbar_dropshadow_back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:id="@+id/FooterLayout"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="bottom|center"
            android:background="@drawable/footergold"
            >

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
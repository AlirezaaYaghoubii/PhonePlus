<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:layoutDirection="rtl"
    android:textDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center|top"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        >

        <CheckBox
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="نام"
            android:id="@+id/CheckBox_UserName"
            android:layout_marginRight="10dp"
            android:checked="true"
            android:textSize="12sp"
            />

        <CheckBox
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="تلفن"
            android:id="@+id/CheckBox_Phone1"
            android:layout_marginRight="10dp"
            android:checked="true"
            android:textSize="12sp"
            />

        <CheckBox
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="تلفن دو"
            android:id="@+id/CheckBox_Phone2"
            android:layout_marginRight="10dp"
            android:checked="false"
            android:textSize="12sp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff626c83"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center|top"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        >

        <CheckBox
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="کد پستی"
            android:id="@+id/CheckBox_PostId"
            android:layout_marginRight="10dp"
            android:checked="false"
            android:textSize="12sp"
            />

        <CheckBox
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="ش ش"
            android:id="@+id/CheckBox_ShenasNameh"
            android:layout_marginRight="10dp"
            android:checked="false"
            android:textSize="12sp"
            />

        <CheckBox
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="شماره ملی"
            android:id="@+id/CheckBox_MelliId"
            android:layout_marginRight="10dp"
            android:checked="false"
            android:textSize="12sp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff626c83"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:gravity="right|top"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ScrollView1"
            android:layout_marginTop="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/TextView_Message"
            android:padding="10dp"
            android:textSize="14sp"
            />

        </ScrollView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff626c83"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"

        />

    <Button
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:id="@+id/Btn_SendMessage"
        android:text="ارسال"
        android:background="@drawable/grid_selector"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff626c83"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"

        />
    <Button
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:id="@+id/Btn_Cancel"
        android:text="انصراف"
        android:background="@drawable/grid_selector"
        />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textDirection="rtl"
    android:layoutDirection="rtl"
    android:padding="10dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="175dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layoutDirection="rtl"
            android:paddingTop="1dp"
            android:textDirection="rtl"

            >





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal"
                        android:gravity="right|top"
                        android:layout_gravity="top"
                        android:background="@drawable/grid_pressed"
                        >

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="35dp"
                            android:text="نسبت : "
                            android:gravity="right|center"
                            android:paddingRight="5dp"
                            android:paddingTop="0dp"
                            android:textSize="15sp"
                            android:id="@+id/TextView_NesbatLabel"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:text="فرزند محمد صادق"
                            android:gravity="right|center"
                            android:paddingRight="5dp"
                            android:paddingTop="0dp"
                            android:textSize="15sp"
                            android:id="@+id/TextView_NesbatData"
                            />

                    </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:gravity="right|top"
                    android:layout_gravity="top"
                    android:background="@drawable/grid_pressed"
                    >

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:text="عنوان : "
                        android:gravity="right|center"
                        android:paddingRight="5dp"
                        android:paddingTop="0dp"
                        android:textSize="15sp"
                        android:id="@+id/TextView_TitleLabel"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="تاریخ تولد"
                        android:gravity="right|center"
                        android:paddingRight="5dp"
                        android:paddingTop="0dp"
                        android:textSize="15sp"
                        android:id="@+id/TextView_TitleData"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:gravity="right|top"
                    android:layout_gravity="top"
                    android:background="@drawable/grid_pressed"
                    >

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:text="تاریخ : "
                        android:gravity="right|center"
                        android:paddingRight="5dp"
                        android:paddingTop="0dp"
                        android:textSize="15sp"
                        android:id="@+id/TextView_DateLabel"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="1393/06/23"
                        android:gravity="right|center"
                        android:paddingRight="5dp"
                        android:paddingTop="0dp"
                        android:textSize="15sp"
                        android:id="@+id/TextView_DateData"
                        />

                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="right|top"
                android:layout_gravity="top"
                android:background="@drawable/grid_pressed"
                >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:text="شرح : "
                    android:gravity="right|center"
                    android:paddingRight="5dp"
                    android:paddingTop="0dp"
                    android:textSize="15sp"
                    android:id="@+id/TextView_CommentLabel"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="تست"
                    android:gravity="right|center"
                    android:paddingRight="5dp"
                    android:paddingTop="0dp"
                    android:textSize="15sp"
                    android:id="@+id/TextView_CommentData"
                    />

            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="left|top"
            android:layout_gravity="top"
            android:background="@drawable/grid_pressed"
            >

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layoutDirection="ltr"
                android:paddingTop="1dp"
                android:textDirection="ltr"
                android:layout_gravity="left"
                android:id="@+id/LinearLayoutOPenMenu"
                >

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"

                    android:id="@+id/ImageViewOPenMenu"
                    android:layout_gravity="left"

                    />

            </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
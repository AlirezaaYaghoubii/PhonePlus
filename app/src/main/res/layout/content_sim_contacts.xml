<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/toolbar_dropshadow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:focusableInTouchMode="true"
        android:id="@+id/LayerSearch"
        android:gravity="top"
        android:baselineAligned="false"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:background="@android:drawable/dialog_holo_light_frame"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/TxtSearch"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/tertiary_text_dark"
            android:gravity="center"
            android:autoText="false"
            android:layout_marginTop="4dp"
            android:drawableRight="@android:drawable/ic_menu_search"

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/editbox_pressed"

            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/Layer2"
        android:gravity="top"
        android:baselineAligned="false"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:background="@android:drawable/dialog_holo_light_frame"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:scrollbars="vertical" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center|top"
        android:layout_gravity="top"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:layout_marginTop="2dp"
        android:background="@drawable/grid_pressed"

        >

        <Button
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/Btn_SelectAll"
            android:text="انتخاب همه"
            android:background="@android:drawable/dialog_holo_light_frame"
            />


        <Button
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/Btn_UnSelect"
            android:text="عدم انتخاب"
            android:background="@android:drawable/dialog_holo_light_frame"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center|top"
        android:layout_gravity="top"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:layout_marginTop="0dp"
        android:background="@drawable/grid_pressed"

        >

        <Button
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/Btn_TransferToApp"
            android:text="انتقال به برنامه"
            android:background="@android:drawable/dialog_holo_light_frame"
            />


        <Button
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/Btn_Cancel"
            android:text="انصراف"
            android:background="@android:drawable/dialog_holo_light_frame"
            />

    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/toolbar_dropshadow_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/FooterLayout"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="bottom|center"
        android:background="@drawable/footer"
        >

    </LinearLayout>
</LinearLayout>
